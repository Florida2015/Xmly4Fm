<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="tab_bar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:button">@null</item>
    </style>

    <style name="tab_radio" parent="tab_bar">
        <item name="android:textSize">@dimen/textSmall</item>
        <item name="android:textColor">@color/main_tab_radio_color_selector</item>
    </style>

    <style name="tab_radio_color_white" parent="tab_bar">
        <item name="android:padding">@dimen/dimenSmall</item>
        <item name="android:textSize">@dimen/textLarge</item>
        <item name="android:textColor">@color/main_tab_radio_color_white_selector</item>
    </style>


    <style name="track_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/dimenSmall</item>
        <item name="android:layout_marginRight">@dimen/dimenMiddle</item>
        <item name="android:textSize">@dimen/textSmall</item>
        <item name="android:textColor">@color/colorGray</item>

    </style>

</resources>
