<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/dimenSmall">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/kw_user_item_cover"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:placeholderImage="@mipmap/image_default"
        app:placeholderImageScaleType="fitXY"
        app:roundAsCircle="true"
        app:viewAspectRatio="1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimenSmall"
        android:layout_weight="4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/kw_user_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="title"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textLarge" />

            <ImageView
                android:id="@+id/kw_user_item_is_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimenSmall"
                android:src="@mipmap/anchor_vip_flag" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimenSmall"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/kw_user_item_track_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimenSmall"
                android:text="声音 133"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/textSmall" />

            <TextView

                android:id="@+id/kw_user_item_fun_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="声音 133"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/textSmall" />
        </LinearLayout>

        <TextView
            android:id="@+id/kw_user_item_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimenSmall"
            android:text="intro"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/textSmall" />
    </LinearLayout>

</LinearLayout>