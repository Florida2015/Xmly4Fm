<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yushilei.xmly4fm.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dimenLarge">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textHuge" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGray" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dimenLarge"
        android:layout_marginTop="@dimen/dimenLarge"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dimenSmall"
            android:drawableTop="@mipmap/login_xiaomi"
            android:padding="@dimen/dimenSmall"
            android:text="小米登录"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/textLarge" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dimenSmall"
            android:drawableTop="@mipmap/login_weixin"
            android:padding="@dimen/dimenSmall"
            android:text="微信登录"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/textLarge" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dimenSmall"
            android:drawableTop="@mipmap/login_qq"
            android:padding="@dimen/dimenSmall"
            android:text="QQ登录"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/textLarge" />

        <TextView
            android:id="@+id/login_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/dimenSmall"
            android:drawableTop="@mipmap/login_weibo"
            android:padding="@dimen/dimenSmall"
            android:text="微博登录"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/textLarge" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGray" />

</LinearLayout>
